<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Forms_PlatformCustomization"
             x:Class="Forms_PlatformCustomization.MainPage">
  <ContentPage.BackgroundColor>
    <OnPlatform x:TypeArguments="Color"
                  iOS="Red"
                  WinPhone="Green"
                  Android="Blue"
                />
  </ContentPage.BackgroundColor>

  <Label Font="20"
           VerticalOptions="Center"
           HorizontalOptions="Center"
         >
    <Label.Text>

      <OnPlatform x:TypeArguments="x:String">
        <OnPlatform.iOS>
          Welcome to Xamarin.Forms from iOS!!
        </OnPlatform.iOS>
        <OnPlatform.WinPhone>
          Welcome to Xamarin.Forms from Windows UWP!!
        </OnPlatform.WinPhone>
        <OnPlatform.Android>
          Welcome to Xamarin.Forms from Android!!
        </OnPlatform.Android>
      </OnPlatform>
    </Label.Text>
  </Label>

</ContentPage>